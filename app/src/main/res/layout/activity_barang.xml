<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0866D6">

    <!-- Judul -->
    <TextView
        android:id="@+id/tvTitleBarang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/kelola_barang"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSubTambah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tambah_barang"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleBarang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card form input + list -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBarang"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubTambah"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Form input -->
            <EditText
                android:id="@+id/etNama"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#E0F8F5"
                android:hint="@string/nama_barang"
                android:padding="10dp"
                android:textColor="#333333"
                android:textColorHint="#999999" />

            <EditText
                android:id="@+id/etHarga"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="#E0F8F5"
                android:hint="@string/harga"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="#333333"
                android:textColorHint="#999999" />

            <EditText
                android:id="@+id/etStok"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:background="#E0F8F5"
                android:hint="@string/stok"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="#333333"
                android:textColorHint="#999999" />

            <Button
                android:id="@+id/btnTambah"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFB800"
                android:text="@string/tambah"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <!-- List barang -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
