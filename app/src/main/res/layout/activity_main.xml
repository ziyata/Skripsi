<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/status_bar_padding"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:text="POS"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Admin section -->
        <TextView
            android:id="@+id/tvAdminSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Menu Admin"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnKelolaBarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelola Barang" />

        <Button
            android:id="@+id/btnPenyesuaianStok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penyesuaian Stok (IN/Adjust)" />

        <Button
            android:id="@+id/btnPrediksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prediksi Stok" />

        <Button
            android:id="@+id/btnRiwayatTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riwayat Transaksi" />

        <!-- User section -->
        <TextView
            android:id="@+id/tvUserSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Menu User"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnScanQr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan QR" />

        <Button
            android:id="@+id/btnCheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checkout (Kasir)" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Logout" />

        <Button
            android:id="@+id/btnPesananMasuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Pesanan Masuk" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
